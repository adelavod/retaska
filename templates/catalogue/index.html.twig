{% extends 'homepage/index.html.twig' %}

{% block title %}Hello CatalogueController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 12px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

        <div class="row">
            {# LEVÉ MENU #}
<div class="container" style="justify-content: center; width: 20%; background-color: #f1f2f3;">
  <br><h5>Kategorie produktů:</h5>
    {% for category in categories %}
        <a href="{{ path('list_id', {('id'): category.id }) }}" class="btn btn-primary" style="color: white; width: 95%; margin: 5px">{{ category.name }}</a><br>
            {% endfor %}
        </div>

            {# VÝPIS PRODUKTŮ #}
<div class="container" style="width: 78%; justify-content: right;"><br>
 <div class="row">
    {%  for product in products %}
            <div class="card" style="width: 18rem; margin: 10px">
                    <img src="..." class="card-img-top" alt="...">
                    <div class="card-body">
                            <a href="{{ path('catalogue_detail', {('id'):  product.id }) }}
"                        class="card-title" style="font-size: 1.5rem">{{ product.name }}</a>

                        <br>{% for category in product.category %}
                        <h7>Kategorie: {{ category.name }}</h7>

                            <br>
                        {% endfor  %}

                        <p class="card-text" style="font-size: 12px"> {{ product.description }}</p>


                            <p>Cena: {{ product.price }} Kč.</p>

                        <a href="{{ path('novaobjednavka', {'id': product.id}) }}" class="btn btn-primary">Koupit</a>
                        <a href="{{ path('kosik_add', {'id': product.id}) }}" class="btn btn-secondary">Do košíku</a>
                    </div>
            </div>
        {% endfor %}

 </div>
</div>
        </div>
{% endblock %}
