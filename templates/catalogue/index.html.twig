{% extends 'homepage/index.html.twig' %}

{% block title %}Katalog produktů{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 12px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

        <div class="row">
            {# LEVÉ MENU #}
<div class="container" style="justify-content: center; width: 20%; background-color: #f1f2f3;">
  <br><h5>Kategorie produktů:</h5>
    {% for category in categories %}
        <a href="{{ path('list_id', {('id'): category.id }) }}" class="btn btn-primary" style="color: white; width: 95%; margin: 5px">{{ category.name }}</a><br>
            {% endfor %}
        </div>

            {# VÝPIS PRODUKTŮ #}
<div class="container" style="width: 78%; justify-content: right;"><br>
 <div class="row">
    {%  for product in products %}
            <div class="card" style="width: 18rem; margin: 10px">
                    <img src="..." class="card-img-top" alt="...">
                    <div class="card-body">
                            <a href="{{ path('catalogue_detail', {('id'):  product.id }) }}
"                        class="card-title" style="font-size: 1.5rem">{{ product.name }}</a>

                        <br>{{ product.category.name }}

                        <p class="card-text" style="font-size: 12px"> {{ product.description }}</p>


                            <p>Cena: {{ product.price }} Kč.</p>

                        <a href="{{ path('kosik_add', {'id': product.id}) }}" class="btn btn-primary">Do košíku</a>
                    </div>
            </div>
        {% endfor %}

 </div>
</div>
        </div>
    <nav class="navbar navbar-expand-md navbar-light"
         style="background-color: #73A605; height: 50px">
        <a class="navbar-brand" href="{{ path('homepage') }}">
            <img src="{{ asset('images/logo2simple.png') }}" width="40" height="40" alt="">
        </a>

        <a class="navbar-brand" href="#">REtaška</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
            </ul>
            <a style="font-weight: bold">&copy; Adéla Vod, 2019</a>

        </div>
    </nav>
{% endblock %}
