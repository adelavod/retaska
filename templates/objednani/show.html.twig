    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ objednani.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ objednani.name }}</td>
            </tr>
            <tr>
                <th>Surname</th>
                <td>{{ objednani.surname }}</td>
            </tr>
            <tr>
                <th>Email</th>
