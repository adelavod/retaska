            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ objednani.telephone }}</td>
            </tr>
            <tr>
                <th>Street</th>
                <td>{{ objednani.street }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ objednani.city }}</td>
            </tr>
            <tr>
                <th>Zipcode</th>
                <td>{{ objednani.zipcode }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ objednani.message }}</td>
            </tr>
            <tr>
                <th>StavObjednavky</th>
