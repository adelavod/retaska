{% extends 'publicbase.html.twig' %}

{% block title %}Hello KosikController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>



<div class="container col-6" style="margin-top: 5%">
    <h1>    <img src="{{ asset('images/basket2.png') }}" width="40" height="40" alt=""> Obsah Vašeho košíku:</h1>
    <table class="table table-sm">
        <thead>
        <tr><td style="font-weight: bold">Id</td>
            <td style="font-weight: bold">Název produktu</td>
            <td style="font-weight: bold">Cena</td>
            <td style="font-weight: bold">Počet</td>
            <td style="font-weight: bold">Změnit počet</td>
        </tr>

        </thead>
        <tbody>
        {% for item in kosik %}
            <tr>
                <td>{{ item.id }}</td>
                <td>{{ item.name }}</td>
                <td>{{ item.price }}</td>
                <td>{{ item.amount }}</td>
                <td>
                    <a href="{{ path('kosik_amountplus', {'id': item.id})}}" class="btn btn-success btn-sm"> + </a>
                    <a href="{{ path('kosik_amountminus', {'id': item.id}) }}" class="btn btn-danger btn-sm"> - </a>

                </td>
            </tr>
        {% endfor %}
        </tbody>

    </table>
</div>





{% endblock %}
